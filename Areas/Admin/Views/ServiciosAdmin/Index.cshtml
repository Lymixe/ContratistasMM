@model IEnumerable<Servicio>

@{
    ViewData["Title"] = "Mantener Catálogo de Servicios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container content-section">
    <div class="admin-panel-header">
        <div>
            <h1>@ViewData["Title"]</h1>
            <p class="text-muted">Edita el contenido de las páginas de servicios públicos.</p>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Nombre del Servicio</th>
                <th>Características Resumidas</th>
                <th style="width: 10%;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><strong>@item.Nombre</strong></td>
                    <td>@item.Caracteristicas</td>
                    <td class="text-end">
                        <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-edit"></i> Editar Contenido
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>