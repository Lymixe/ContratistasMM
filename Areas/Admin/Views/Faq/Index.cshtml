@model IEnumerable<PreguntaFrecuente>

@{
    ViewData["Title"] = "Gestionar Preguntas Frecuentes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container content-section">
    <div class="admin-panel-header">
         <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1>@ViewData["Title"]</h1>
                <p class="text-muted">Administra la sección de FAQ de la página de Soporte.</p>
            </div>
            <button class="btn btn-light js-crear-faq-btn">+ Nueva Pregunta</button>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null) { <div class="alert alert-success">@TempData["SuccessMessage"]</div> }
    @if (TempData["ErrorMessage"] != null) { <div class="alert alert-danger">@TempData["ErrorMessage"]</div> }
    
    <table class="table table-hover align-middle">
        <thead><tr><th>Pregunta</th><th>Orden</th><th></th></tr></thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><strong>@item.Pregunta</strong></td>
                    <td>@item.Orden</td>
                    <td class="text-end">
                        <button class="btn btn-sm btn-outline-secondary js-edit-faq-btn" data-id="@item.Id"><i class="fas fa-edit"></i></button>
                        <button class="btn btn-sm btn-outline-danger js-delete-faq-btn" data-id="@item.Id" data-bs-toggle="modal" data-bs-target="#eliminarFaqModal"><i class="fas fa-trash"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modales -->
<div id="modal-placeholder"></div>
<div class="modal fade" id="eliminarFaqModal" tabindex="-1">
    <div class="modal-dialog"><div class="modal-content">
        <form asp-action="Eliminar" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" id="deleteFaqId" />
            <div class="modal-header"><h5 class="modal-title">Confirmar Eliminación</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
            <div class="modal-body"><p>¿Estás seguro de que quieres eliminar esta pregunta frecuente?</p></div>
            <div class="modal-footer"><button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button><button type="submit" class="btn btn-danger">Eliminar</button></div>
        </form>
    </div></div>
</div>

@section Scripts {
    <script>
    $(function() {
        var placeholder = $('#modal-placeholder');

        $('.js-crear-faq-btn').on('click', function() {
            $.get('/Admin/Faq/Crear', function(data) {
                placeholder.html(data);
                placeholder.find('.modal').modal('show');
            });
        });

        $('table').on('click', '.js-edit-faq-btn', function() {
            var id = $(this).data('id');
            $.get('/Admin/Faq/Editar/' + id, function(data) {
                placeholder.html(data);
                placeholder.find('.modal').modal('show');
            });
        });

        $('table').on('click', '.js-delete-faq-btn', function() {
            var id = $(this).data('id');
            $('#deleteFaqId').val(id);
        });

        $('body').on('hidden.bs.modal', '.modal', function () {
            placeholder.empty();
        });
    });
    </script>
}