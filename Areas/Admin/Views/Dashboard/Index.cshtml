@{
    ViewData["Title"] = "Panel de Administración";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container content-section">
    <div class="admin-panel-header">
        <h1>@ViewData["Title"]</h1>
        <p class="text-muted">Vista general de todos los proyectos y recursos</p>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon icon-active"><i class="fas fa-tasks"></i></div>
                <div class="stat-info">
                    <span class="stat-number">@ViewBag.ProyectosActivos</span>
                    <span class="stat-label">Proyectos en Progreso</span>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon icon-completed"><i class="fas fa-check-circle"></i></div>
                <div class="stat-info">
                    <span class="stat-number">@ViewBag.ProyectosFinalizados</span>
                    <span class="stat-label">Proyectos Finalizados</span>
                </div>
            </div>
        </div>
    </div>

    <div class="action-panel">
        <h4>Acciones Rápidas</h4>
        <div class="row">
            <div class="col-md-3">
                <a asp-area="Admin" asp-controller="Proyectos" asp-action="Index" class="action-card primary">
                    <i class="fas fa-folder-open"></i>
                    <span>Gestionar Proyectos</span>
                </a>
            </div>
            <div class="col-md-3">
                <a asp-area="Admin" asp-controller="Personal" asp-action="Index" class="action-card">
                    <i class="fas fa-users"></i>
                    <span>Gestionar Personal</span>
                </a>
            </div>
            <div class="col-md-3">
                <a asp-area="Admin" asp-controller="ServiciosAdmin" asp-action="Index" class="action-card">
                    <i class="fas fa-concierge-bell"></i>
                    <span>Catálogo de Servicios</span>
                </a>
            </div>
            <div class="col-md-3">
                <a asp-area="Admin" asp-controller="Referencia" asp-action="Index" class="action-card">
                    <i class="fas fa-book"></i>
                    <span>Contenido de Soporte</span>
                </a>
            </div>
        </div>
        <div class="col-md-3" style="margin:0 auto;margin-top:10px;">
                <a asp-area="Admin" asp-controller="Faq" asp-action="Index" class="action-card">
                    <i class="fas fa-question-circle"></i>
                    <span>Preguntas Frecuentes</span>
                </a>
            </div>
    </div>
</div>