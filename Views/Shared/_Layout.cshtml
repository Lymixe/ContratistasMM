<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-g" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Contratistas M&M</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ContratistasMM.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
</head>
<body>
    <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-custom border-bottom box-shadow">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/img/logo.png" alt="Logo Contratistas M&M" />
                <span>M&M Contratistas</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav main-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Servicios">Servicios</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Proyectos">Proyectos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Soporte">Soporte</a>
                    </li>
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Cliente"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Cliente" asp-action="MisProyectos">Mis Proyectos</a>
                            </li>
                        }
                        if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index">Panel</a>
                            </li>
                        }
                    }
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>
</header>

    
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="new-footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4">
                    <a class="footer-brand d-flex align-items-center mb-2" asp-controller="Home" asp-action="Index">
                        <img src="~/img/logo.png" alt="Logo Contratistas M&M" />
                        <span>Contratistas M&M</span>
                    </a>
                    <p>Construyendo el futuro con excelencia y compromiso.</p>
                </div>
                <div class="col-lg-4 col-md-6 mb-4">
                    <h5>Contacto</h5>
                    <ul class="list-unstyled">
                        <li>Email: info@contratistasmm.com</li>
                        <li>Tel: +51 912 345 678</li>
                    </ul>
                </div>
                <div class="col-lg-4 col-md-12 mb-4">
                    <h5>Síguenos</h5>
                    <a href="#" class="me-3"><i class="fab fa-facebook fa-2x"></i></a>
                    <a href="#" class="me-3"><i class="fab fa-instagram fa-2x"></i></a>
                    <a href="#" class="me-3"><i class="fab fa-linkedin fa-2x"></i></a>
                </div>
            </div>
            <div class="footer-divider"></div>
            <div class="text-center">
                <p>&copy; @DateTime.Now.Year Contratistas M&M. Todos los derechos reservados.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>