@model IEnumerable<ContratistasMM.Models.Servicio>

@{
    ViewData["Title"] = "Nuestros Servicios";
}

<div class="container content-section">
    <div class="section-title">
        <h2>@ViewData["Title"]</h2>
        <p>Ofrecemos una gama completa de soluciones de construcción adaptadas a las necesidades de cada cliente.</p>
    </div>

    <div class="row">
        @foreach (var servicio in Model)
        {
            <div class="col-md-4 mb-4 d-flex align-items-stretch">
                <div class="service-item-card w-100">
                    <div class="card-body d-flex flex-column text-center">
                        @{
                            // CORRECCIÓN 2: Lógica para asignar un ícono diferente a cada servicio
                            string iconClass = "fa-tools"; // Ícono por defecto
                            switch (servicio.Nombre)
                            {
                                case "Edificaciones Completas":
                                    iconClass = "fa-building";
                                    break;
                                case "Ampliaciones / Remodelaciones":
                                    iconClass = "fa-drafting-compass";
                                    break;
                            }
                        }
                        <i class="fas @iconClass" style="font-size: 3rem; color: var(--light-blue-accent); margin-bottom: 15px;"></i>
                        
                        <h4 class="card-title mt-3">@servicio.Nombre</h4>
                        <p class="card-text">@servicio.Caracteristicas</p>
                        
                        <!-- 
                            CORRECCIÓN 1: Bug del Enlace
                            Se ha eliminado la clase "stretched-link". El <a> ahora funciona de forma independiente
                            y el asp-route-id="@servicio.Id" asegura que cada botón apunte al detalle correcto.
                            
                            CORRECCIÓN 3: Altura de las Tarjetas
                            La clase "mt-auto" en el botón lo empuja hacia el final del contenedor flex,
                            asegurando que todos los botones se alineen en la parte inferior y las tarjetas mantengan la misma altura.
                        -->
                        <a asp-controller="Servicios" asp-action="Detalle" asp-route-id="@servicio.Id" class="btn btn-primary-solid mt-auto">Ver Más</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>