@model ContratistasMM.Models.Servicio

@{
    ViewData["Title"] = Model.Nombre;
}

<div class="container content-section">
    <!-- SECCIÓN DE DETALLES DEL SERVICIO -->
    <div class="row mb-5">
        <div class="col-lg-12">
            <h1>@Model.Nombre</h1>
            <p class="lead">@Model.Descripcion</p>
            <hr />
        </div>
        <div class="col-md-6">
            <h4>Beneficios Clave</h4>
            <ul class="benefits-list">
                @Html.Raw(Model.Beneficios)
            </ul>
        </div>
        <div class="col-md-6">
            <h4>Características Principales</h4>
            <p>@Model.Caracteristicas</p>
            <div class="mt-4">
                <button type="button" class="btn btn-custom-primary" data-bs-toggle="modal" data-bs-target="#contactoModalServicio">
                    Solicitar Información sobre este Servicio
                </button>
                <a asp-controller="Servicios" asp-action="Index" class="btn btn-secondary">Volver a Servicios</a>
            </div>
        </div>
    </div>

    <!-- SECCIÓN DE PROYECTOS RELACIONADOS -->
    @if (Model.Proyectos.Any(p => p.EsPublico))
    {
        <div class="related-projects-section">
            <hr />
            <h2 class="section-title">Proyectos Relacionados</h2>
            <div class="row">
                @foreach (var proyecto in Model.Proyectos.Where(p => p.EsPublico))
                {
                    <div class="col-lg-4 col-md-6 mb-4 d-flex align-items-stretch">
                        <div class="project-card-wrapper w-100">
                            <a asp-controller="Proyectos" 
                               asp-action="Detalle" 
                               asp-route-id="@proyecto.Id" 
                               asp-route-origen="servicio" 
                               asp-route-servicioId="@Model.Id"
                               class="project-card-link">
                                <div class="project-card h-100">
                                    <img src="@proyecto.ImagenUrl" class="card-img-top" alt="Imagen de @proyecto.Nombre">
                                    <div class="card-body">
                                        <h5 class="card-title">@proyecto.Nombre</h5>
                                        <p class="card-text"><strong>Año:</strong> @proyecto.AnioEjecucion</p>
                                        <div class="btn btn-primary-solid mt-auto">Ver Proyecto</div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

<!-- MODAL DE CONTACTO -->
<div class="modal fade" id="contactoModalServicio" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Contacto por Servicio: @Model.Nombre</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <p>Elige tu método de contacto preferido.</p>
                @{
                    var whatsappMessage = $"Buen día, solicito información sobre el servicio de {Model.Nombre}";
                    var emailSubject = $"Solicitud de información sobre el servicio de {Model.Nombre}";
                }
                <a href="https://wa.me/51947258010?text=@Uri.EscapeDataString(whatsappMessage)" target="_blank" class="btn btn-lg btn-whatsapp w-100 mb-3"><i class="fab fa-whatsapp"></i> WhatsApp</a>
                <a href="mailto:zapatacontratista@hotmail.com?subject=@Uri.EscapeDataString(emailSubject)" class="btn btn-lg btn-gmail w-100"><i class="far fa-envelope"></i> Email (Gmail)</a>
            </div>
        </div>
    </div>
</div>