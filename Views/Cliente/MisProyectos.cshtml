@model IEnumerable<Proyecto>

@{
    ViewData["Title"] = "Mis Proyectos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container content-section">
    <div class="section-title">
        <h2>@ViewData["Title"]</h2>
        <p>Aquí puedes ver el seguimiento de tus obras en curso y finalizadas.</p>
    </div>

    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach(var proyecto in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4 d-flex align-items-stretch">
                    <div class="client-project-card w-100">
                        <!-- CORRECCIÓN DE LA IMAGEN: Forma más simple y robusta de mostrar la imagen -->
                        <img src="@(proyecto.ImagenUrl ?? "/img/placeholder.png")" class="card-img-top" alt="Imagen de @proyecto.Nombre">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                 <span class="badge status-badge-@(proyecto.Estado.Replace(" ", ""))">@proyecto.Estado</span>
                                <span class="progress-percent">@proyecto.Progreso%</span>
                            </div>
                            <h5 class="card-title">@proyecto.Nombre</h5>
                            <p class="card-text">@proyecto.Descripcion</p>
                            <small class="text-muted"><i class="fas fa-map-marker-alt"></i> @proyecto.Ubicacion</small><br>
                            <small class="text-muted"><i class="far fa-calendar-alt"></i> Inicio: @(proyecto.FechaInicio?.ToString("d/M/yyyy") ?? "N/A")</small>
                            <div class="progress mt-3 mb-3">
                                <div class="progress-bar" style="width: @proyecto.Progreso%;"></div>
                            </div>
                            <a asp-controller="Cliente" asp-action="DetalleProyecto" asp-route-id="@proyecto.Id" class="btn btn-primary-solid w-100 mt-auto">Ver Detalles</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <h4>Aún no tienes proyectos asignados</h4>
                <p>Cuando se te asigne un proyecto, aparecerá aquí para su seguimiento.</p>
            </div>
        }
    </div>
</div>