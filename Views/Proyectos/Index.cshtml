@model IEnumerable<ContratistasMM.Models.Proyecto>

@{
    ViewData["Title"] = "Proyectos Históricos";
}

<div class="container content-section">
    <div class="section-title">
        <h2>@ViewData["Title"]</h2>
        <p>Conoce la calidad y experiencia que nos respalda a través de nuestras obras más destacadas.</p>
    </div>

    <!-- INICIO: Formulario de Búsqueda -->
    <div class="row justify-content-center mb-5">
        <div class="col-md-8">
            <form asp-controller="Proyectos" asp-action="Index" method="get" class="search-form">
                <div class="input-group">
                    <input type="text" name="busqueda" class="form-control" placeholder="Buscar por nombre, tipo, ubicación..." value="@ViewData["BusquedaActual"]">
                    <button class="btn btn-primary-solid" type="submit"><i class="fas fa-search"></i> Buscar</button>
                </div>
            </form>
        </div>
    </div>
    <!-- FIN: Formulario de Búsqueda -->


    <div class="row">
        @if (Model.Any())
        {
            @foreach (var proyecto in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4 d-flex align-items-stretch">
                    <div class="project-card w-100">
                        <img src="@proyecto.ImagenUrl" class="card-img-top" alt="Imagen de @proyecto.Nombre">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@proyecto.Nombre</h5>
                            <p class="card-text"><strong>Tipo:</strong> @proyecto.TipoObra</p>
                            <p class="card-text mb-4"><strong>Año:</strong> @proyecto.AnioEjecucion</p>
                            <!--
                                CORRECCIÓN DEL BUG:
                                El 'asp-route-id' ahora está correctamente aislado dentro de la tarjeta.
                                El uso de @proyecto.Id asegura que el ID de cada proyecto específico en el bucle
                                se use para generar un enlace único.
                            -->
                            <a asp-controller="Proyectos" asp-action="Detalle" asp-route-id="@proyecto.Id" class="btn btn-primary-solid mt-auto">Ver Detalles</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <h4>No se encontraron proyectos</h4>
                <p>Intenta con otro término de búsqueda o <a asp-controller="Proyectos" asp-action="Index">limpia la búsqueda</a>.</p>
            </div>
        }
    </div>
</div>